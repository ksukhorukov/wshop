<%= form_for product do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<%= f.label :price %>
	<%= f.number_field :price %>
	<%= f.label :discount %>
	<%= f.number_field :discount %>
	<%= f.label :discount_type %>
	<%= f.select :discount_type, options_for_select([:percent, :absolute]), include_blank: true  %>
	<%= f.label :text_after_purchase %>
	<%= f.text_field :text_after_purchase %>
	<%= f.label :file %>
	<%= f.file_field  :shop_item %>
	<%= f.label :instock %>
	<%= f.check_box :instock %>
	<%= f.submit %>
<% end %>